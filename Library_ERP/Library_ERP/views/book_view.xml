<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="library_book_list_view" model="ir.ui.view">
            <field name="name">library.book.list.view</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <list>
                    <field name="book_id" string="Book Id"/>
                    <field name="book_name" string="Book Name"/>
                    <field name="genre" string="Genre"/>
                    <field name="author_id" string="Author"/>
                    <field name="borrow_id" string="Borrower"/>
                    <field name="publish_date" string="Publish Date"/>



                </list>

            </field>

        </record>

        <record id="library_book_form_view" model="ir.ui.view">
            <field name="name">library.book.form.view</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Books">
                    <group>
                        <group>
                            <field name="book_id" string="Book Id" required="1"/>
                            <field name="book_name" string="Books name" required="1"/>
                            <field name="genre" string="Genre" required="1"/>
                            <field name="author_id" string="Author" required="1"/>
                            <field name="borrow_id" string="Borrower"/>



                            <field name="publish_date" string="Publish Date" required="1"/>

                        </group>
                    </group>

                </form>

            </field>

        </record>

        <record id="library_book_action" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">list,form</field>

        </record>

        <record id="library_borrow_action" model="ir.actions.act_window">
            <field name="name">Borrow</field>
            <field name="res_model">library.borrow</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="library_author_action" model="ir.actions.act_window">
            <field name="name">Author</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">list,form</field>

        </record>




        <menuitem id="library_root_menu" name="Library Management"/>

        <menuitem id="book_menu" action="library_book_action" name="Book"
                  parent="library_root_menu"/>

        <menuitem id="author_menu" action="library_author_action" name="Author"
                  parent="library_root_menu"/>

        <menuitem id="borrow_menu" action="library_borrow_action" name="Borrow"
                  parent="library_root_menu"/>


    </data>
</odoo>