<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="library_author_list_view" model="ir.ui.view">
            <field name="name">library.author.list.view</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <list>

                    <field name="author_name"/>
                    <field name="books_count"/>
                </list>

            </field>

        </record>

        <record id="library_author_form_view" model="ir.ui.view">
            <field name="name">library.author.form.view</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <form string="Author">
                    <sheet>
                            <group>
                                <field name="author_name" string="Author's Name" required="1"/>


                            </group>


                        <notebook>
                            <page string="Books">
                                <field name="booktoauthor_ids">
                                    <list editable="bottom">
                                        <field name="book_id" string="Book_Id"/>
                                        <field name="book_name" string="Book_Name"/>
                                        <field name="genre" string="Genre"/>

                                        <field name="publish_date" string="Published_Date"/>

                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>

                </form>

            </field>

        </record>

        <record id="library_book_action" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">list,form</field>

        </record>

        <record id="library_borrow_action" model="ir.actions.act_window">
            <field name="name">Borrow</field>
            <field name="res_model">library.borrow</field>
            <field name="view_mode">list,form</field>

        </record>

        <record id="library_author_action" model="ir.actions.act_window">
            <field name="name">Author</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">list,form</field>

        </record>

        <menuitem id="library_root_menu" name="Library Management"/>

        <menuitem id="book_menu" action="library_book_action" name="Book"
                  parent="library_root_menu"/>

        <menuitem id="author_menu" action="library_author_action" name="Author"
                  parent="library_root_menu"/>

        <menuitem id="borrow_menu" action="library_borrow_action" name="Borrow"
                  parent="library_root_menu"/>


    </data>
</odoo>